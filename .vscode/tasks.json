{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build GCC Debug",
			"type": "shell",
			"command": "${workspaceFolder}/build-all.bat",
			"args": [
				"gcc",
				"debug"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Build GCC Release",
			"type": "shell",
			"command": "${workspaceFolder}/build-all.bat",
			"args": [
				"gcc",
				"release"
			],
			"group": "build"
		},
		{
			"label": "Build Clang Debug",
			"type": "shell",
			"command": "${workspaceFolder}/build-all.bat",
			"args": [
				"clang",
				"debug"
			],
			"group": {
				"kind": "build"
			}
		},
		{
			"label": "Build Clang Release",
			"type": "shell",
			"command": "${workspaceFolder}/build-all.bat",
			"args": [
				"clang",
				"release"
			],
			"group": "build"
		}
	]
}