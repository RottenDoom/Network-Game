{
	"window.commandCenter": false,
	"breadcrumbs.enabled": false,
	"workbench.colorTheme": "Gruvbox Dark Hard",
	"workbench.activityBar.iconClickBehavior": "toggle",
	"editor.detectIndentation": false,
	"editor.fontFamily": "Liberation Mono",
	"editor.minimap.enabled": false,
	"editor.insertSpaces": false,
	"editor.fontSize": 16,
	"editor.fontWeight": "100",
	"editor.tabSize": 8,
	"[cpp]": {
		"editor.insertSpaces": false,
		"editor.tabSize": 8
	},
	"[c]": {
		"editor.insertSpaces": false,
		"editor.tabSize": 8
	},
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.fixAll": "always",
		"source.fixAll.clang-tidy": "always"
	},
	"C_Cpp.formatting": "clangFormat",
	"clang-format.style": "file",
	"clang-tidy.checks": "readability-*,modernize-*,performance-*,bugprone-*",
	"clang-tidy.useBuildPath": "${workspaceFolder}/build/build-gcc",
	"clang-tidy.compilerArgs": [
		"-I${workspaceFolder}/build/build-gcc",
		"-I${workspaceFolder}/engine/src"
	],
	"C_Cpp.default.compileCommands": "${workspaceFolder}/build/build-gcc/compile_commands.json",
	"C_Cpp.default.compilerPath": "C:/mingw64/bin/g++.exe",
	"files.associations": {
		"*.cpp": "cpp",
		"*.tsx": "typescriptreact",
		"defines.h": "c",
		"logger.h": "c",
		"functional": "cpp",
		"bitset": "cpp",
		"fstream": "cpp",
